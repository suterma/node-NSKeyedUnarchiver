{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "declaration": true,
        "outDir": "dist",
        "sourceMap": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": ["source/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
